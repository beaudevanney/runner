<!DOCTYPE html>
<html>
<head>
	<title>Runner Game</title>
	<style>
		body {
			margin: 0;
			padding: 0;
			overflow: hidden;
		}

		#player {
			position: absolute;
			bottom: 0;
			left: 50%;
			transform: translateX(-50%);
			width: 50px;
			height: 50px;
			background-color: red;
			border-radius: 50%;
			animation: run 1s infinite linear;
		}

		@keyframes run {
			0% {
				transform: translateX(-50%) rotate(0deg);
			}
			100% {
				transform: translateX(-50%) rotate(360deg);
			}
		}

		.obstacle {
			position: absolute;
			bottom: 100px;
			width: 50px;
			height: 50px;
			background-color: green;
			animation: move 2s infinite linear;
		}

		@keyframes move {
			0% {
				left: 0;
			}
			100% {
				left: 100%;
			}
		}
	</style>
</head>
<body>
	<div id="player"></div>
	<div class="obstacle"></div>
	<div class="obstacle" style="left: 200px;"></div>

	<script>
		document.addEventListener('keydown', function(event) {
			if (event.code === 'Space') {
				jump();
			}
		});

		function jump() {
			let player = document.getElementById('player');
			player.style.animation = 'jump 0.5s ease-in-out';
			setTimeout(function() {
				player.style.animation = 'run 1s infinite linear';
			}, 500);
		}
	</script>
</body>
</html>
